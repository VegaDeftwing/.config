[module/menu-apps]
type = custom/menu
;expand-right = true
menu-0-0 = Browser
menu-0-0-exec = menu-open-1
menu-0-1 = Pentest
menu-0-1-exec = menu-open-2
menu-0-2 = Multimedia
menu-0-2-exec = menu-open-3

; browser side
menu-1-0 = Vivaldi
menu-1-0-exec = vivaldi_sec &
menu-1-1 = Xombrero
menu-1-1-exec = xombrero &
menu-1-2 = w3m
menu-1-2-exec = termite -e "w3m https://duckduckgo.com" &

; pentest side
menu-2-0 = Term
menu-2-0-exec = termite &
menu-2-1 = Wireshark
menu-2-1-exec = wireshark-gtk &
menu-2-2 = Msf
menu-2-2-exec = termite -e msfconfsole &

; multimedia side
menu-3-0 = Wallpapers
menu-3-0-exec = feh --geometry 200x200 --zoom fill -D 2 -d ~/images &
menu-3-1 = Gimp
menu-3-1-exec = gimp &
menu-3-2 = Scrot
menu-3-2-exec = scrot &

format = <menu> <label-toggle>
;format-background = ${colors.background}
format-padding = 2
label-open = "%{F#fa1B54} %{F-}"
label-close = "%{F#4b62f1} %{F-}"
label-separator = " . "

